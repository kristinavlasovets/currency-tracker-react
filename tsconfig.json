{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["DOM", "ESNext"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@assets/*": ["./assets/*"],
      "@components/*": ["./components/*"],
      "@constants/*": ["./constants/*"],
      "@helpers/*": ["./helpers/*"],
      "@pages/*": ["./pages/*"],
      "@shared/*": ["./shared/*"],
      "@api/*": ["./api/*"],
      "@styles/*": ["./styles/*"],
      "@theme/*": ["./theme/*"],
      "@types/*": ["./@types/*"],
      "@utils/*": ["./utils/*"]
    },
    "jsx": "react-jsx",
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "types": ["node", "jest", "@testing-library/jest-dom"],
  "include": [
    "./src/**/*",
    ".eslintrc.js",
    ".babelrc",
    "jest.config.js",
    "setupTests.ts",
    "cypress.config.ts"
  ],
  "exclude": ["node_modules", ".vscode", "__mocks__"]
}
